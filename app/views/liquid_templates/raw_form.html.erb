<%= form_for :test_template, url: test_raw_url do |f| %>
  <div class="field">
    <%= f.label :entity %><br>
    <%= f.text_field :entity, value: @raw_test.entity %>
  </div>

  <div class="field">
    <%= f.label :id %><br>
    <%= f.text_field :entity_id, value: @raw_test.entity_id %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, value: @raw_test.body, style: "width: 500px; height:300px;"%>
  </div>

  <div class="actions">
    <%= f.submit "TEST!" %>
  </div>
<% end %>


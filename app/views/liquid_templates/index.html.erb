<p id="notice"><%= notice %></p>

<h1>Listing Liquid Templates</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liquid_templates.each do |liquid_template| %>
      <tr>
        <td><%= liquid_template.label %></td>
        <td><%= liquid_template.body %></td>
        <td><%= link_to 'Show', liquid_template %></td>
        <td><%= link_to 'Edit', edit_liquid_template_path(liquid_template) %></td>
        <td><%= link_to 'Destroy', liquid_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

